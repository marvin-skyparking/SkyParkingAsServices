{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowJs": true,                 // ✅ allow .js files
    "checkJs": false,                 // ❌ skip type-checking for .js files (optional)
    "typeRoots": ["./node_modules/@types"] // Temporarily exclude custom types
  },
  "include": ["./src/**/*.ts", "./src/uploads/**/*", "./src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
